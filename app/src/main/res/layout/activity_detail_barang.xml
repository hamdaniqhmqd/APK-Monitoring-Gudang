<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.barang.DetailBarang"
    android:backgroundTint="@color/white">

    <!-- Judul Section -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Detail Barang"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="8dp"/>

    <!-- Detail Barang -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dataDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/putih_smooth"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Barang : Kaos Bulu"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tv_item_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kategori : Wanita"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_name"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Harga : Rp. 200.000,-"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_category"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tv_item_stock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Stok : 150 pcs"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_price"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tv_item_sizes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ukuran : S, M, L, XL, XXL, XXXL"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_stock"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Detail Supplier Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dataSupplier"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/putih_smooth"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/dataDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/supplier_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Detail Supplier"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tv_supplier_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Supplier : Aminah"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/supplier_title"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tv_supplier_nik"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="NIK : 233070198989"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_supplier_name"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tv_supplier_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nomor Hp : 082172627834"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_supplier_nik"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
