<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.barang.DetailBarang">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section for Item Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Barang : Kaos Bulu"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori : Wanita"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga : Rp. 200.000,-"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_item_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stok : 150 pcs"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_item_sizes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ukuran : S, M, L, XL, XXL, XXXL"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Section for Supplier Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_supplier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Supplier : Kaos Bulu"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_supplier_nik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIK : Wanita"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tv_supplier_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Hp : Rp. 200.000,-"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>